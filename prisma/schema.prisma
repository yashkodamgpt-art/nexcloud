// HarborNex Database Schema
// Using Supabase PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  emailVerified DateTime?
  apiKey        String    @unique @default(cuid())
  accounts      Account[]
  sessions      Session[]
  chunks        Chunk[]
  projects      Project[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Chunk {
  id        String    @id @default(cuid())
  name      String
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  status    String    @default("offline")
  type      String    @default("chunk") // "chunk" or "pod"
  
  // Dirac resources (human-readable total)
  diracs    Int       @default(5)
  
  // Split diracs (machine-readable components)
  dc        Int       @default(50)   // Compute diracs (10dc = 0.1 CPU cores)
  dm        Int       @default(80)   // Memory diracs (16dm = 256MB RAM)
  ds        Int       @default(250)  // Storage diracs (50ds = 5GB disk)
  db        Int       @default(50)   // Bandwidth diracs (10db = 5Mbps)
  
  // Usage tracking (for live graphs)
  usageDc   Int       @default(0)    // Current compute usage
  usageDm   Int       @default(0)    // Current memory usage
  usageDs   Int       @default(0)    // Current storage usage
  usageDb   Int       @default(0)    // Current bandwidth usage
  
  // Legacy fields (for compatibility)
  storage   Int       @default(0)
  ram       Int       @default(0)
  cpu       Int       @default(0)
  
  lastSeen  DateTime?
  projects  Project[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Project {
  id                  String        @id @default(cuid())
  name                String
  subdomain           String        @unique
  userId              String
  user                User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  chunkId             String?
  chunk               Chunk?        @relation(fields: [chunkId], references: [id])
  framework           String?
  status              String        @default("stopped")
  // GitHub integration
  githubRepoUrl       String?
  githubRepoName      String?
  githubBranch        String?       @default("main")
  githubWebhookSecret String?
  githubLastCommit    String?
  tunnelUrl           String?
  deployments         Deployment[]
  envVariables        EnvVariable[]
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt
}


model Deployment {
  id            String   @id @default(cuid())
  projectId     String
  project       Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  version       Int
  status        String   @default("pending")
  buildLogs     String?
  commitHash    String?
  commitMessage String?
  branch        String?
  duration      Int?     // Build duration in seconds
  url           String?  // Preview URL for this deployment
  createdAt     DateTime @default(now())
}

model EnvVariable {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  key       String
  value     String
  target    String   @default("all") // production, preview, development, all
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([projectId, key, target])
}

